<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-create-provinces" author="you">
        <createTable tableName="provinces">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-create-wards" author="you">
        <createTable tableName="wards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="province_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint baseTableName="wards"
                                 baseColumnNames="province_code"
                                 referencedTableName="provinces"
                                 referencedColumnNames="code"
                                 constraintName="fk_wards_province_code"/>
    </changeSet>

    <changeSet id="2.1-delete-all-wards" author="you">
        <comment>Delete all data from wards table (must run before deleting provinces due to FK)</comment>
        <delete tableName="wards"/>
    </changeSet>

    <changeSet id="2.2-delete-all-provinces" author="you">
        <comment>Delete all data from provinces table</comment>
        <delete tableName="provinces"/>
    </changeSet>

    <changeSet id="3-load-provinces-data" author="you">
        <loadData
                tableName="provinces"
                file="db/changelog/data/tinh.csv"
                encoding="UTF-8"
                separator=","
                quotchar='"'
                skipLines="1"
                usePreparedStatements="true">

            <column header="code" name="code" type="STRING"/>

            <column header="Name" name="name" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="4-load-wards-data" author="you">
        <loadData
                tableName="wards"
                file="db/changelog/data/xa.csv"
                encoding="UTF-8"
                separator=","
                quotchar='"'
                skipLines="1"
                usePreparedStatements="true">

            <column header="code" name="code" type="STRING"/>
            <column header="Name" name="name" type="STRING"/>

            <column header="ProvinceCode" name="province_code" type="STRING"/>
        </loadData>
    </changeSet>
</databaseChangeLog>
