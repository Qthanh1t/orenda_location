<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1-create-provinces" author="you">
        <createTable tableName="provinces">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2-create-wards" author="you">
        <createTable tableName="wards">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="province_code" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint baseTableName="wards"
                                 baseColumnNames="province_code"
                                 referencedTableName="provinces"
                                 referencedColumnNames="code"
                                 constraintName="fk_wards_province_code"/>
    </changeSet>

</databaseChangeLog>
